num=int(input("write the number = "))
if num > 1:
    for i in range(2, num):
        if (num % i) == 0:
            print(num, "is not a prime number")
            print(i, "x", num // i, " = ", num)
            break
    else:
        print(num, "is a prime number")
else:
    print(num, "is not a prime number")

# the second way to find a number is prime number or combined number


num = int(input("check prime number \nwrite the number : "))

if num > 1:
    for i in range(2, num):
        if (num % i ) == 0:
            print(num, "is a not a prime number because" ,i ,"*", i//num, "=", num)
            break
        else:
            print(num, "is a prime number")
            break
else:
    print(num, "is zero or a minus number ")
